{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    {% block stylesheets %}
      <!-- Required meta tags -->
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

      <!-- Bootstrap CSS -->
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
      <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css"/>
    {% endblock %}
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 70px;">
      <a class="navbar-brand" href="#">Gestion Etudiants - Symfony</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
      <ul class="nav navbar-nav navbar-right">
        {% if app.user %}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                  <a class="nav-link " href="{{path('listeEtudiant')}}">Liste Etudiants</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="{{path('chambre_create')}}">Liste Chambres</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="{{path('inscription')}}">Inscrire un Etudiant</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="{{path('chambre_create')}}">Enregistrer une chambre</a>
              </li>
            </ul>
            <li class="nav-item"><a class="nav-link" href="{{ path('liste_ajax') }}">List Ajax</a></li>
            <li class="nav-item"><a class="nav-link bg-info p-1 text-white ml-5 rounded " href="{{ path('app_logout') }}">DÃ©connexion <i class="fa fa-btn fa-sign-out"></i></a></li>
        </div>

        {% else %}

            <li><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
            <li>
              <a class="nav-link" href="{{ path('registration') }}">S'inscrire</a>
            </li>

        {% endif %}
      </ul>
    </nav>
    {% block body %}{% endblock %} {% block javascripts %}
      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> 
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
      <script src="{{asset('js/script.js')}}"></script>
      <script src="{{asset('js/scriptForAjax.js')}}"></script>
    {% endblock %}
  </body>
</html>